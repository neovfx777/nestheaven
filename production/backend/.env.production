# Production Environment Configuration
# Copy this file to .env and update values for your production setup

# Server
NODE_ENV=production
PORT=3000

# Database (SQLite) - Adjust path if needed
DATABASE_URL="file:./prisma/dev.db"

# JWT - Generate a secure random string for production
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-change-this

# Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10

# CORS - Update with your actual frontend domain
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Seed (optional - for initial OWNER_ADMIN)
OWNER_ADMIN_EMAIL=admin@your-domain.com
OWNER_ADMIN_PASSWORD=your_secure_admin_password

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret-change-this-in-production

# Email (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
