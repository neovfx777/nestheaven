# Server
NODE_ENV=development
HOST=0.0.0.0
PORT=3000

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/good_home?schema=public"

# JWT
JWT_SECRET=replace-with-strong-random-secret-at-least-32-characters

# Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=http://localhost:5173
# Comma-separated allowed Host headers (domain only). Empty = derive from CORS_ORIGINS + localhost.
ALLOWED_HOSTS=localhost,127.0.0.1
TRUST_PROXY=false
BODY_LIMIT=1mb
PUBLIC_APP_URL=http://localhost:5173

# Request rate limits
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=400
MUTATION_RATE_LIMIT_WINDOW_MS=900000
MUTATION_RATE_LIMIT_MAX=180
AUTH_RATE_LIMIT_WINDOW_MS=600000
AUTH_RATE_LIMIT_MAX=20
ADMIN_RATE_LIMIT_WINDOW_MS=600000
ADMIN_RATE_LIMIT_MAX=80
CHAT_RATE_LIMIT_WINDOW_MS=60000
CHAT_RATE_LIMIT_MAX=30

# Email verification
EMAIL_REQUIRE_VERIFICATION=true
EMAIL_VERIFY_TOKEN_TTL_MIN=1440
PASSWORD_RESET_TOKEN_TTL_MIN=60
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Firebase Admin (for Firebase auth token verification)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# OpenRouter (backend AI assistant)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_SITE_URL=http://localhost:5173
OPENROUTER_APP_NAME=NestHeaven Apartment Assistant

# Seed/reset accounts (required for seed/reset scripts)
OWNER_ADMIN_EMAIL=
OWNER_ADMIN_PASSWORD=
ADMIN_EMAIL=
ADMIN_PASSWORD=
MANAGER_ADMIN_EMAIL=
MANAGER_ADMIN_PASSWORD=
SELLER_EMAIL=
SELLER_PASSWORD=
