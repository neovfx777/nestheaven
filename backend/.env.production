# Production Environment Configuration
# Copy this file to .env and update values for your production setup

# Server
NODE_ENV=production
HOST=127.0.0.1
PORT=3000

# Database (SQLite) - Adjust path if needed
DATABASE_URL="file:./prisma/dev.db"

# JWT - Generate a secure random string for production
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-change-this

# Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10

# CORS - Update with your actual frontend domain
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
# Host allowlist for Host header validation (comma-separated, no scheme)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost,127.0.0.1
TRUST_PROXY=true
PUBLIC_APP_URL=https://your-domain.com

# Seed (optional - for initial OWNER_ADMIN)
OWNER_ADMIN_EMAIL=admin@your-domain.com
OWNER_ADMIN_PASSWORD=your_secure_admin_password

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200
MUTATION_RATE_LIMIT_WINDOW_MS=900000
MUTATION_RATE_LIMIT_MAX=120
AUTH_RATE_LIMIT_WINDOW_MS=600000
AUTH_RATE_LIMIT_MAX=20
ADMIN_RATE_LIMIT_WINDOW_MS=600000
ADMIN_RATE_LIMIT_MAX=60
CHAT_RATE_LIMIT_WINDOW_MS=60000
CHAT_RATE_LIMIT_MAX=25

# Email verification (Gmail SMTP with app password)
EMAIL_REQUIRE_VERIFICATION=true
EMAIL_VERIFY_TOKEN_TTL_MIN=1440
PASSWORD_RESET_TOKEN_TTL_MIN=60
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-gmail@gmail.com
SMTP_PASS=your-gmail-app-password
SMTP_FROM="NestHeaven <your-gmail@gmail.com>"

# Firebase Admin (service account)
FIREBASE_PROJECT_ID=nestheaven-85f9b
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@nestheaven-85f9b.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Session
SESSION_SECRET=your-session-secret-change-this-in-production
