// Prisma schema for Good Home - Real Estate API

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  role          String    @default("USER")
  isActive      Boolean   @default(true) @map("is_active")
  deactivatedAt DateTime? @map("deactivated_at")
  deactivatedById String? @map("deactivated_by_id")
  firstName     String?   @map("first_name")
  lastName      String?   @map("last_name")
  phone         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  createdById   String?   @map("created_by_id")

  createdBy   User?    @relation("UserCreatedBy", fields: [createdById], references: [id])
  createdUsers User[]  @relation("UserCreatedBy")
  deactivatedBy   User?   @relation("UserDeactivatedBy", fields: [deactivatedById], references: [id])
  deactivatedUsers User[] @relation("UserDeactivatedBy")

  favorites        Favorite[]
  savedSearches    SavedSearch[]
  apartments       Apartment[]
  createdComplexes Complex[]
  broadcasts       Broadcast[]
}

model Complex {
  id          String   @id @default(cuid())
  name        String   // Legacy title, JSON or plain string
  address     String?  // Legacy address, JSON or plain string
  city        String   // Legacy city

  // Project-level details
  description           String?
  permissions           String?  @map("permissions")
  latitude              Float?   @map("latitude")
  longitude             Float?   @map("longitude")
  walkabilityScore      Int?     @map("walkability_score")
  airQualityScore       Int?     @map("air_quality_score")
  airQualityNote        String?  @map("air_quality_note")
  nearbyInfrastructure  String?  @map("nearby_infrastructure")

  // New fields
  title             String?
  developer         String?   // Developer name
  blockCount        Int?      @default(1) @map("block_count")
  locationText      String?   @map("location_text")
  locationLat       Float?    @map("location_lat")
  locationLng       Float?    @map("location_lng")
  bannerImageUrl    String?   @map("banner_image_url")
  permission1Url    String?   @map("permission1_url")
  permission2Url    String?   @map("permission2_url")
  permission3Url    String?   @map("permission3_url")
  walkabilityRating Int?      @map("walkability_rating")
  airQualityRating  Int?      @map("air_quality_rating")
  nearbyNote        String?   @map("nearby_note")
  nearbyPlaces      String?   @map("nearby_places")
  amenities         String?   @map("amenities")
  allowedSellers    String?   @map("allowed_sellers") // JSON array of seller IDs
  createdById       String?   @map("created_by_id")
  createdBy         User?     @relation(fields: [createdById], references: [id], onDelete: SetNull)

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  apartments  Apartment[]
}

model Apartment {
  id                 String         @id @default(cuid())
  complexId          String?        @map("complex_id")
  sellerId           String         @map("seller_id")
  status             String         @default("active")
  price              Float
  area               Float
  rooms              Int
  floor              Int?
  totalFloors        Int?           @map("total_floors")
  title              String         // JSON: { uz, ru, en }
  description        String?        // JSON: { uz, ru, en }
  materials          String?        // JSON: { uz, ru, en }, optional
  infrastructureNote String?        @map("infrastructure_note") // JSON, optional
  // Construction: "available" = ready now, "built" = ready by date
  constructionStatus String?        @map("construction_status")
  readyByYear        Int?           @map("ready_by_year")
  readyByMonth       Int?           @map("ready_by_month")
  createdAt          DateTime       @default(now()) @map("created_at")
  updatedAt          DateTime       @updatedAt @map("updated_at")

  complex    Complex?   @relation(fields: [complexId], references: [id], onDelete: SetNull)
  seller     User       @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  images     ApartmentImage[]
  favorites  Favorite[]
}

model ApartmentImage {
  id          String    @id @default(cuid())
  apartmentId String    @map("apartment_id")
  url         String
  order       Int       @default(0)
  createdAt   DateTime  @default(now()) @map("created_at")

  apartment Apartment @relation(fields: [apartmentId], references: [id], onDelete: Cascade)

  @@map("apartment_images")
}

model Favorite {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  apartmentId String   @map("apartment_id")
  createdAt   DateTime @default(now()) @map("created_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  apartment Apartment @relation(fields: [apartmentId], references: [id], onDelete: Cascade)

  @@unique([userId, apartmentId])
  @@map("favorites")
}

model SavedSearch {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  name        String?
  filters     String   // JSON
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("saved_searches")
}

model Broadcast {
  id          String   @id @default(cuid())
  title       String
  message     String
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  createdById String?  @map("created_by_id")

  createdBy User? @relation(fields: [createdById], references: [id], onDelete: SetNull)
}
