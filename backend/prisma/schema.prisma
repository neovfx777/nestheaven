generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  SELLER
  ADMIN
  MANAGER_ADMIN
  OWNER_ADMIN
}

enum ApartmentStatus {
  ACTIVE
  HIDDEN
  SOLD
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  role          UserRole  @default(USER)
  phone         String?
  avatar        String?
  lastLoginAt   DateTime?
  emailVerified Boolean   @default(false)

  // Relations
  apartments    Apartment[]          @relation("SellerApartments")
  favorites     UserFavorite[]
  savedSearches SavedSearch[]
  statusChanges ApartmentStatusLog[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Complex {
  id          String  @id @default(cuid())
  name        String
  image       String?
  description String?

  // Relations
  apartments Apartment[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Apartment {
  id        String  @id @default(cuid())
  complexId String?

  // Status
  status ApartmentStatus @default(ACTIVE)

  // Basic info
  title       Json // Multi-language {uz, ru, en}
  description Json // Multi-language {uz, ru, en}
  price       Float
  rooms       Int
  area        Float
  floor       Int
  developer   String

  // Location
  address String
  lat     Float?
  lng     Float?

  // Materials & Infrastructure
  materials      Json? // Multi-language or structured
  infrastructure Json? // Structured booleans + optional notes

  // Additional info
  airQualityIndex         Float?
  airQualitySource        String?
  investmentGrowthPercent Float?
  investmentGrowthNote    String?

  // Contact
  contactPhone    String
  contactTelegram String?
  contactWhatsapp String?
  contactEmail    String?

  // Installment options (JSON array)
  installmentOptions Json?

  // Counters
  views          Int @default(0)
  favoritesCount Int @default(0)

  // Relations
  complex    Complex?             @relation(fields: [complexId], references: [id], onDelete: SetNull)
  sellerId   String
  seller     User                 @relation("SellerApartments", fields: [sellerId], references: [id], onDelete: Cascade)
  images     ApartmentImage[]
  statusLogs ApartmentStatusLog[]
  favorites  UserFavorite[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ApartmentImage {
  id          String    @id @default(cuid())
  apartmentId String
  apartment   Apartment @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
  url         String
  order       Int       @default(0)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ApartmentStatusLog {
  id          String          @id @default(cuid())
  apartmentId String
  apartment   Apartment       @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
  fromStatus  ApartmentStatus
  toStatus    ApartmentStatus
  changedById String
  changedBy   User            @relation(fields: [changedById], references: [id], onDelete: Cascade)
  reason      String?

  // Timestamps
  createdAt DateTime @default(now())
}

model UserFavorite {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  apartmentId String
  apartment   Apartment @relation(fields: [apartmentId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt DateTime @default(now())

  // Composite unique constraint
  @@unique([userId, apartmentId])
}

model SavedSearch {
  id      String  @id @default(cuid())
  userId  String
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  name    String
  filters Json // JSON object with search filters
  notify  Boolean @default(false)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
