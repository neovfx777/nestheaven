<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nh_surface"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/complexDetailToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nh_surface_card"
        android:elevation="2dp"
        android:title="@string/tab_complexes"
        app:titleTextColor="@color/nh_text_primary" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/nh_surface_card"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/nh_border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/complexDetailImage"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:contentDescription="@string/image"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/complexDetailTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                                android:textColor="@color/nh_text_primary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/complexDetailCity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:textColor="@color/nh_text_secondary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/complexDetailBlocks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bg_stat_tile"
                                android:padding="8dp"
                                android:textColor="@color/nh_text_primary"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/complexDetailRating"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/bg_stat_tile"
                                android:padding="8dp"
                                android:textColor="@color/nh_text_primary"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/complexDetailAmenities"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/bg_stat_tile"
                                android:padding="8dp"
                                android:textColor="@color/nh_text_primary"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/complexDetailNearby"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/bg_stat_tile"
                                android:padding="8dp"
                                android:textColor="@color/nh_text_primary"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/nh_surface_card"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="1dp"
                    app:strokeColor="@color/nh_border"
                    app:strokeWidth="1dp">

                    <TextView
                        android:id="@+id/complexDetailDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="@color/nh_text_primary" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/complexDetailProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>
