########################################
# Backend server
########################################
PORT=3000
NODE_ENV=development

########################################
# Database
########################################
DATABASE_URL="file:./backend/prisma/dev.db"

########################################
# JWT
########################################
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
